{
  "name": "thau-calculator",
  "version": "1.0.0",
  "description": "Hệ thống tính toán cho thầu lô đề - Web App + Telegram Bot",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "dev:bot": "nodemon bot/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:bot\"",
    "build:client": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "db:init": "node server/db/init.js"
  },
  "keywords": [
    "thau",
    "lo-de",
    "calculator",
    "telegram-bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.64.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "netlify-cli": "^23.13.1",
    "nodemon": "^3.0.3"
  }
}
